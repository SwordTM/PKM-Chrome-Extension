{
  "manifest_version": 3,
  "name": "Nirma AI",
  "version": "1.1.0",
  "description": "Collect selected text or page extracts, tag them, and export/POST for LLM analysis.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://consent.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "youtube.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js",
        "scraper.js"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "action": {
    "default_title": "LLM Inbox",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png"
  },
  "oauth2": {
    "client_id": "913007410021-cl14rbmmmoade1r3didofvcjub8v4u0q.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.readonly"
    ]
  }
}